@model IEnumerable<WADProject.Models.StaffRole>

@{
    ViewData["Title"] = "Index";
}
@{
    Layout = "";
}
<link href="~/css/site.css" rel="stylesheet" type="text/css" media="screen" runat="server" />

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RoleName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RoleName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.StaffRoleId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.StaffRoleId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.StaffRoleId">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>