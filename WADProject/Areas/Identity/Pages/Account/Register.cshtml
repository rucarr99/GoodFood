@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="book-content">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post" class="book-form" enctype="multipart/form-data" onsubmit="return validated()">
            <h4 class="book-heading">Register</h4>
            <hr />
            @*<div asp-validation-summary="All" class="text-danger"></div>*@
            <div class="form-group-book">
                <label asp-for="Input.FirstName"></label>
                <input asp-for="Input.FirstName" class="input-book firstname" , placeholder="First Name" />
               <div id="error-firstname">Please type your first name</div>
            </div>
            <div class="form-group-book">
                <label asp-for="Input.LastName"></label>
                <input asp-for="Input.LastName" class="input-book lastname " , placeholder="Last Name" />
                <div id="error-lastname">Please type your last name</div>
            </div>
            <div class="form-group-book">
                <label asp-for="Input.Username"></label>
                <input asp-for="Input.Username" class="input-book logname" , placeholder="Username" />
                <div id="error-loginName">Please type a valid username (min. 6 char)</div>
            </div>
            <div class="form-group-book">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="input-book" , placeholder="Email" />
                <div id="error-email">Please type a valid email </div>
            </div>
            <div class="form-group-book">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="input-book pass" , placeholder="Password" />
                <div id="error-password">Please type a valid password </div>
            </div>
            <div class="form-group-book">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="input-book passwordType" , placeholder="Confirm Password" />
                <div id="error-passwordType">Password doesn't match</div>
            </div>
            <div class="form-group-book">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="input-book" , placeholder="Phone number" />
            </div>
            <div align="center">
                    <input type="file" name="file" />
                </div>
        <div class="placeholder-box">
            <button type="submit" class="button">Register</button>
        </div>

        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/site.js" type="text/javascript"></script>
}

<style>
    #error-loginName, #error-password, #error-firstname, #error-lastname, #error-passwordType, #error-email {
        font-size: 15px;
        color: #C62828;
        background: rgba(255,0,0,0.1);
        text-align: center;
        padding-bottom: 3px;
        display: none;
    }

    .login-btn-div { }
</style>
